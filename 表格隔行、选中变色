<script src="jquery-2.1.4.js" type="text/javascript"></script>
<script>
	$( document).ready(function() {
        $("tbody>tr:odd").addClass("odd");
		$("tbody>tr:even").addClass("even");
		$("tbody>tr:contains('王五')").addClass("selected").find(":checkbox").prop("checked",true);
		/*
		$("tbody>tr").click(function(e) {
            $(this)
				.addClass("selected")
				.siblings().removeClass("selected")
				.end()
				.find(":radio").attr("checked",true);
        });			//当前面是单选框时的代码
		
		$("tbody>tr").click(function() {
            if($(this).hasClass("selected")){
				$(this).removeClass("selected").find(":checkbox").prop("checked",false);
			} else {
				$(this).addClass("selected").find(":checkbox").prop("checked",true);
			}
        });			//当前面是复选框时的代码，这是第一种方法。
		*/
		$("tbody>tr").click(function(e) {
            var hasSelected = $(this).hasClass("selected");		//看看被选中的这行是否已经被选中过
			$(this)[hasSelected?"removeClass":"addClass"]("selected")		//若选中过，则移除选中效果；若没有，则添加选中效果
				.find(":checkbox").prop("checked",!hasSelected);		//若选中过，则不勾选复选框；若没有选中过，则勾选复选框
        });
    });
</script>

