            background: url("img/5.jpg") no-repeat;
        }
        #bg{
            width: 600px;
            height: 450px;
            background: #ffffff;
            border: 10px solid #666666;
            position: absolute;
            left: 50%;
            top: 50%;
            margin-left: -300px;
            margin-top: -225px;
        }
        #bg #num,#bg #left,#bg #right,#bg #info{
            background: #000;
            color: #ffffff;
            text-align: center;
            opacity: 0.4;
            position: absolute;
        }
